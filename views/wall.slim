header
    h1 PostIt

form action="/users/#{params[:user_id]}/wall/new" class="message-post" method="post"
    -if !@refrence_id.nil?
        span="Reply to message #{@refrence_id}"
    -else
        span New message:

    textarea rows="10" cols="20" class="post-box" name="content"
    input type="hidden" name="refrence_id" value="#{@refrence_id}"
    button type="submit" class="post-box" Post it!
    -if @user == @admin_id
        input type="checkbox" name="anc" value="2" Announcement
        input type="checkbox" name="rln" value="3" Release notes
        input type="checkbox" name="adp" value="1" Admin post

form action="/users/#{params[:user_id]}/wall/filter" method="post"
    span Filter:
    select name="filter" onchange="this.form.submit()"
        option value="None" None
        option value="admin_post" Admin posts
        option value="announcement" Announcement
        option value="release_notes" Release notes
main
    -for message in @messages
        == slim :'messages/message', locals: {message: message, tags: @tags}